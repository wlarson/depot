<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> 
<html> 
<head> 
  <title><%= I18n.t('layout.store.title') %></title> 
  <%= stylesheet_link_tag "depot", :media => "all" %> 
  <%= javascript_include_tag :defaults %>
</head> 
<body id="store"> 
<div id="banner"> 
  <% form_tag '', :method => 'GET', :class => 'locale' do %>
    <%= select_tag 'locale', options_for_select(LANGUAGES, I18n.locale),
      :onchange => 'this.form.submit()' %>
    <%= submit_tag 'submit' %>
    <%= javascript_tag "$$('.locale input').each(Element.hide)" %>
  <% end %>  
  <% #<%= image_tag("logo.png") %> 
  <%= @page_title || I18n.t('layout.store.title') %> 
</div> 
<div id="columns"> 
<div id="side">
<% hidden_div_if(@cart.items.empty?, :id => "cart") do %> 
  <%= render(:partial => "cart", :object => @cart) %> 
<% end %> 
<a href="http://www...."><%= I18n.t('layout.store.side.home') %></a><br /> 
<a href="http://www..../faq"><%= I18n.t('layout.store.side.questions') %></a><br /> 
<a href="http://www..../news"><%= I18n.t('layout.store.side.news') %></a><br /> 
<a href="http://www..../contact"><%= I18n.t('layout.store.side.contact') %></a><br /> 
</div> 
<div id="main"> 
  <% if flash[:notice] -%> 
    <div id="notice"><%= flash[:notice] %></div> 
  <% end -%> 
  
  <%= yield :layout %> 
</div> 
</div> 
</body> 
</html> 
